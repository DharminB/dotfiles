# Config file for Zathura (pdf viewer)
# (Rules for configuring at https://pwmt.org/projects/zathura/documentation/)
# use clipboard to copy stuff (instead of primary)
set selection-clipboard clipboard

# set how the pdf opens (does not work)
# set adjust-open "best-fit"

# map i to invert color
map [normal] i recolor
map [fullscreen] i recolor
set recolor-darkcolor "#dddddd"
set recolor-lightcolor "#222222"

# unmap Ctrl+r to invert color
unmap [normal] <C-r>
unmap [fullscreen] <C-r>

# map W for zoom to width
map [normal] w adjust_window width
map [fullscreen] w adjust_window width

# map left and right arrow for previous and next page
map [normal] <Right> navigate next
map [fullscreen] <Right> navigate next
map [normal] <Left> navigate previous
map [fullscreen] <Left> navigate previous

# map spacebar to toggle the status bar
map [normal] <Space> toggle_statusbar
map [fullscreen] <Space> toggle_statusbar

