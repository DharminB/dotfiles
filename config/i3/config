# udpate X resources database with .Xdefaults file
exec xrdb ~/.Xdefaults

set $inactive-fg-color #676E7D
set $urgent-bg-color     #E53935

set_from_resource $bg-color i3wm.color0             #000000
set_from_resource $red i3wm.color1                  #FF0000
set_from_resource $green i3wm.color2                #00FF00
set_from_resource $yellow i3wm.color3               #00FFFF
set_from_resource $blue i3wm.color4                 #0000FF
set_from_resource $violet i3wm.color5               #FF00FF
set_from_resource $light-blue i3wm.color6           #88CCDD
set_from_resource $white i3wm.color7                #88CCDD
set_from_resource $fg-color i3wm.foreground         #FFFFFF
set_from_resource $dark-bg-color i3wm.background    #000000
set_from_resource $inactive-bg-color i3wm.fadeColor #111111
set_from_resource $urgent-bg-color i3wm.color1      #111111

# window colors
#                       border              background          fg                  indicator
client.focused          $blue               $blue               $fg-color           #000000
client.unfocused        $inactive-bg-color  $inactive-bg-color  $fg-color  #111111
client.focused_inactive $inactive-bg-color  $inactive-bg-color  $fg-color  #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color    $fg-color           #ff0000


###################################
# BAR SETTINGS
###################################
bar {
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    colors {
        background $dark-bg-color
        separator $fg-color
        #                  border               background         fg
        focused_workspace  $dark-bg-color       $blue              $dark-bg-color
        inactive_workspace $dark-bg-color       $dark-bg-color     $blue
        urgent_workspace   $urgent-bg-color     $urgent-bg-color   $fg-color
    }
    mode hide
}

