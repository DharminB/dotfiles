#! /bin/sh

# This is a script used for executing scripts, sourcing softwares and other
# things before starting a terminal. These are not related to bash or zsh and 
# thus kept in a seperate file.

# Import colorscheme from 'wal' asynchronously
# cat ~/.cache/wal/sequences; clear

export TERM=xterm-256color

# Anaconda3 stuff
# export PATH="/home/dharmin/anaconda3/bin:$PATH"
source /home/dharmin/anaconda3/etc/profile.d/conda.sh

# ROS stuff 
export ROBOT_ENV=brsu-c025-sim
# export ROBOT_ENV=single-room
# export ROBOT_ENV=double-room
export ROBOT=youbot-brsu-1
export ROPOD_ID=ropod_001
export ROPOD_GYM_MODEL_PATH=/home/dharmin/study/fun_coding/rl_with_ropod/gym-ropod/model_config
export CATKIN_WORKSPACE=/home/dharmin/catkin_workspace

# use the previously chose catkin workspace
source $(cat ~/.i3/chosen_catkin_workspace)

# Nao stuff
export PYTHONPATH=${PYTHONPATH}:/home/dharmin/pynaoqi-python2.7-2.1.4.13-linux64

# gradle (multi agent)
export PATH=$PATH:/opt/gradle/gradle-4.10.2/bin

# ranger file browser related settings
export RANGER_LOAD_DEFAULT_RC=FALSE
VISUAL=vim; export VISUAL EDITOR=vim; export EDITOR

# neofetch on start
neofetch --source ~/.config/neofetch/batman3

